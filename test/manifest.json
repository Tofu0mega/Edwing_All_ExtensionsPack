{
  "name": "Focus Search",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Opens a Google search pop-up when a word is scrolled over",

  "action": { 
    "default_icon": {
      "16": "/image/icon16.png",
      "32": "/image/icon32.png",
      "48": "/image/icon48.png",
      "128": "/image/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
